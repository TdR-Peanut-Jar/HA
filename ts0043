blueprint:
  name: Thermostaat schakelen met knop
  description: Zet één of meerdere thermostaten aan of uit met een Zigbee knopactie
  domain: automation
  input:
    knopnummer:
      name: Knopnummer
      selector:
        number:
          min: 1
          max: 3
          step: 1
    actie_type:
      name: Actie type
      selector:
        select:
          options:
            - single
            - double
            - hold
    thermostaten:
      name: Te schakelen thermostaten
      selector:
        entity:
          domain: climate
          multiple: true
    doelmodus:
      name: Nieuwe modus
      selector:
        select:
          options:
            - "heat"
            - "off"

trigger:
  - platform: mqtt
    topic: zigbee2mqtt/TS0043/action
    payload_template: '{{ knopnummer }}_{{ actie_type }}'

condition: []

action:
  - repeat:
      for_each: !input thermostaten
      sequence:
        - service: climate.set_hvac_mode
          target:
            entity_id: "{{ repeat.item }}"
          data:
            hvac_mode: !input doelmodus

mode: single
